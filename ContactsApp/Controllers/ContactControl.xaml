<UserControl x:Class="ContactsApp.Controllers.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactsApp.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock x:Name="nameTextBox" Text="Name LastName" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="emailTextBox" Text="name@gmail.com" FontSize="15" Foreground="DodgerBlue"/>
            <TextBlock x:Name="phoneTextBox" Text="961505950" FontSize="15" FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
